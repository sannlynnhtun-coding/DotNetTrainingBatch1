@using Newtonsoft.Json;
@model HighChartBasicColumnChartModel

@{
    List<List<int>> _data = Model.Data;
    List<string> _Name = Model.Name;
    List<string> _labels = Model.Categories;
}

<figure class="highcharts-figure">
    <div id="container"></div>
    <p class="highcharts-description">
        A basic column chart comparing estimated corn and wheat production
        in some countries.

        The chart is making use of the axis crosshair feature, to highlight
        the hovered country.
    </p>
</figure>

@section scripts {
    <script>
        let _data = @Html.Raw(JsonConvert.SerializeObject(Model.Data));
        let _categories = @Html.Raw(JsonConvert.SerializeObject(Model.Categories));
        let _Name = @Html.Raw(JsonConvert.SerializeObject(Model.Name));

        var _series = [];

        for (var i = 0; i < _Name.length && i < _data.length; i++) {
            var seriesItem = {
                name: _Name[i],
                data: _data[i]
            };
            _series.push(seriesItem);
        }

        Highcharts.chart('container', {
            chart: {
                type: 'column'
            },
            title: {
                text: 'Corn vs wheat estimated production for 2020',
                align: 'left'
            },
            subtitle: {
                text:
                    'Source: <a target="_blank" ' +
                    ' href="https://www.indexmundi.com/agriculture/?commodity=corn">indexmundi</a>',
                align: 'left'
            },
            xAxis: {
                categories: _categories,
                crosshair: true,
                accessibility: {
                    description: 'Countries'
                }
            },
            yAxis: {
                min: 0,
                title: {
                    text: '1000 metric tons (MT)'
                }
            },
            tooltip: {
                valueSuffix: ' (1000 MT)'
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: _series
        });

    </script>
}



@section style {
    <style>

        .highcharts - figure,
        .highcharts - data - table table {
            min - width: 310px;
            max - width: 800px;
            margin: 1em auto;
        }

        #container {
            height: 400px;
        }

        .highcharts - data - table table {
            font - family: Verdana, sans - serif;
            border - collapse: collapse;
            border: 1px solid #ebebeb;
            margin: 10px auto;
            text - align: center;
            width: 100 %;
            max - width: 500px;
        }

        .highcharts - data - table caption {
            padding: 1em 0;
            font - size: 1.2em;
            color: #555;
        }

        .highcharts - data - table th {
            font - weight: 600;
            padding: 0.5em;
        }

        .highcharts - data - table td,
        .highcharts - data - table th,
        .highcharts - data - table caption {
            padding: 0.5em;
        }

        .highcharts - data - table thead tr,
        .highcharts - data - table tr: nth - child(even) {
            background: #f8f8f8;
        }

        .highcharts - data - table tr:hover {
            background: #f1f7ff;
        }
    </style>
}