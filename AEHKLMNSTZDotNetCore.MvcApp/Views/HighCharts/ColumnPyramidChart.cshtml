@model HighChartColumnPyramidChartResponseModel
<figure class="highcharts-figure">
    <div id="container"></div>
    <p class="highcharts-description">
        Chart showing use of the pyramid series type to visualize heights of
        pyramids. A pyramid series is similar to a column series, but with a
        different shape.
    </p>
</figure>

@section scripts {
    <script>
        let Data = @Html.Raw(JsonConvert.SerializeObject(Model.Data));
        let data = Data.map(d => [d.Pyramid, d.Value]);
        Highcharts.chart('container', {
            chart: {
                type: 'columnpyramid'
            },
            title: {
                text: 'The 5 highest pyramids in the World'
            },
            colors: @Html.Raw(JsonConvert.SerializeObject(Model.Color)),
            xAxis: {
                crosshair: true,
                labels: {
                    style: {
                        fontSize: '14px'
                    }
                },
                type: 'category'
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Height (m)'
                }
            },
            tooltip: {
                valueSuffix: ' m'
            },
            series: [{
                name: 'Height',
                colorByPoint: true,
                data: data,
                showInLegend: false
            }]
        });
    </script>
}

@section style {
    <style>
        #container {
            height: 400px;
        }

        .highcharts-figure,
        .highcharts-data-table table {
            min-width: 310px;
            max-width: 800px;
            margin: 1em auto;
        }

        .highcharts-data-table table {
            font-family: Verdana, sans-serif;
            border-collapse: collapse;
            border: 1px solid #ebebeb;
            margin: 10px auto;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }

        .highcharts-data-table caption {
            padding: 1em 0;
            font-size: 1.2em;
            color: #555;
        }

        .highcharts-data-table th {
            font-weight: 600;
            padding: 0.5em;
        }

        .highcharts-data-table td,
        .highcharts-data-table th,
        .highcharts-data-table caption {
            padding: 0.5em;
        }

        .highcharts-data-table thead tr,
        .highcharts-data-table tr:nth-child(even) {
            background: #f8f8f8;
        }

        .highcharts-data-table tr:hover {
            background: #f1f7ff;
        }

    </style>
}