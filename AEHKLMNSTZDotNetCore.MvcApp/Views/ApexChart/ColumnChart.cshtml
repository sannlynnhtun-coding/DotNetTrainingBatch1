@model ApexChartColumnChartModel

@{
    List<int> _data = Model.Series.First().Data;
    List<string> _categories = Model.XAxisCategories;
}

<div id="chart"></div>

@section scripts{
    <script>
        var options = {
            series: [{
                name: "@Model.Series.First().Name1",
                data: @Html.Raw(JsonConvert.SerializeObject(_data))
            }, {
                name: "@Model.Series.First().Name2",
                data: @Html.Raw(JsonConvert.SerializeObject(_data))
            }, {
                name: "@Model.Series.First().Name3",
                data: @Html.Raw(JsonConvert.SerializeObject(_data))
            }],
            chart: {
                type: 'bar',
                height: 350
            },
            plotOptions: {
                bar: {
                    horizontal: false,
                    columnWidth: '55%',
                    endingShape: 'rounded'
                },
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                show: true,
                width: 2,
                colors: ['transparent']
            },
            xaxis: {
                categories: @Html.Raw(JsonConvert.SerializeObject(_categories))
             },
            yaxis: {
                title: {
                    text: '$ (thousands)'
                }
            },
            fill: {
                opacity: 1
            },
            tooltip: {
                y: {
                    formatter: function (val) {
                        return "$ " + val + " thousands"
                    }
                }
            }
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();
    </script>
}