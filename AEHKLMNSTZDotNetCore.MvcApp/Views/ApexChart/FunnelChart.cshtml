@model ApexChartFunnelChartModel
@{
    List<int> _series = Model.Data;
    List<string> _labels = Model.Categories;

}

<div id="chart"></div>

@section scripts {
    <script>
        let _data = @Html.Raw(JsonConvert.SerializeObject(Model.Data));
        let _categories = @Html.Raw(JsonConvert.SerializeObject(Model.Categories));

        function getRandomColor() {
            var letters = '0123456789ABCDEF';
            var color = '#';
            for (var i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }

        var seriesColors = _data.map(function () {
            return getRandomColor();
        });
        var options = {
            series: [
                {
                    name: "Funnel Series",
                    data: _data,
                },
            ],
            chart: {
                type: 'bar',
                height: 350,
            },
            plotOptions: {
                bar: {
                    borderRadius: 0,
                    horizontal: true,
                    distributed: true,
                    barHeight: '80%',
                    isFunnel: true,
                },
            },
            colors: seriesColors,
            dataLabels: {
                enabled: true,
                formatter: function (val, opt) {
                    return opt.w.globals.labels[opt.dataPointIndex];
                },
                dropShadow: {
                    enabled: true,
                },
            },
            title: {
                text: 'Funnel Chart',
                align: 'middle',
            },
            xaxis: {
                categories: _categories,
            },
            legend: {
                show: false,
            },
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();
    </script>
}

